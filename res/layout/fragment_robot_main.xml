<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    
    <RelativeLayout
        android:id="@+id/robot_ll_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
        
        <Button
            android:id="@+id/robot_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="发送" />
        
        <EditText
            android:layout_toLeftOf="@id/robot_btn_submit"
            android:id="@+id/robot_et_word_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:maxLines="3"
            android:layout_marginLeft="5dp"
            
            android:textSize="18dp"
            android:layout_alignParentLeft="true" />

        
    </RelativeLayout>

    <ListView
        android:id="@+id/robot_lv_content_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:divider="#e0e0e0"
        android:cacheColorHint="#00000000"
        android:dividerHeight="0dp"
        android:headerDividersEnabled="true"
        android:scrollbars="none"
        android:layout_above="@id/robot_ll_location"
        android:transcriptMode="normal" >
    </ListView>

</RelativeLayout>